<aside id="sidebar"<% if (theme.sidebar === 'bottom'){ %> class="outer"<% } %>>
  <%
    let widgets = theme.widgets.filter((w) => {
      if(is_post())
        return 'toc' === w
      else
        return 'toc' !== w
    })
  %>
  <% widgets.forEach(function(widget){ %>
    <%- partial('_widget/' + widget) %>
  <% }) %>
</aside>