<%
let customBanner = "";

<!-- banner背景图 -->
if(page.banner) customBanner = `background-image: url(${page.banner})`;
if(is_home()) customBanner = "background-image: url(/css/images/banner.gif)";

<!-- banner高度 -->
let bannerHeight = page['banner-height'];
if(bannerHeight) customBanner += `;height: ${bannerHeight}`;
let bannerHeightStyle = '';
if(bannerHeight) bannerHeightStyle = `style="height: ${bannerHeight}"`;

<!-- banner背景颜色 defualt:f8dc57 -->
let bannerBgColor = page['banner-color'];
if(bannerBgColor) customBanner += `;background-color: #${bannerBgColor}`;

<!--  -->
customBanner = `style="${customBanner}"`;

<!--  -->
let homeClass = is_home() ? 'class="home-page"' : '';
let customClass = ''
if(!is_home() && page.banner) customClass = 'custom'



%>
<header id="header" <%-homeClass%> <%-bannerHeightStyle%> data-log="<%-bannerHeight%>">
  <div id="banner" class="<%-customClass%>" <%-customBanner%>></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner" style="display:none;">
      <h1 id="big-title-wrap">
        <a href="<%- url_for() %>" class="big-title"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <div class="logo"><a href="/"><img src="https://avatars3.githubusercontent.com/u/4394559?s=460&v=4" alt=""></a></div>
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
    </div>
  </div>
</header>